@model RuhsaProject.DTOs.RuhsatImzaDtos.RuhsatImzaDto

@{
    ViewData["Title"] = "Yeni Ruhsat İmza Ekle";
}

<h4 class="fw-bold py-3 mb-4">Yeni Ruhsat İmza Tanımla</h4>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="AdSoyad" class="form-label">Ad Soyad</label>
                <input asp-for="AdSoyad" class="form-control" placeholder="İmzalayan kişinin adı ve soyadını giriniz" />
                <span asp-validation-for="AdSoyad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Unvan1" class="form-label">Ünvan 1</label>
                <input asp-for="Unvan1" class="form-control" placeholder="Üst unvanı giriniz" />
                <span asp-validation-for="Unvan1" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Unvan2" class="form-label">Ünvan 2</label>
                <input asp-for="Unvan2" class="form-control" placeholder="Alt unvanı giriniz" />
                <span asp-validation-for="Unvan2" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="ti ti-check me-1"></i> Kaydet
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                <i class="ti ti-arrow-left me-1"></i> Geri Dön
            </a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
