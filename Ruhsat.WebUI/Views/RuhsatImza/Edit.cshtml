@model RuhsaProject.DTOs.RuhsatImzaDtos.RuhsatImzaDto

@{
    ViewData["Title"] = "Ruhsat İmza Güncelle";
}

<div class="container py-4">
    <div class="card mb-4 shadow-lg">
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <!-- Form Alanları -->
                        <div class="row">
                            <div class="mb-3 col-md-12">
                                <label asp-for="AdSoyad" class="form-label">Ad Soyad</label>
                                <input asp-for="AdSoyad" class="form-control" placeholder="Adı Soyadı giriniz" />
                                <span asp-validation-for="AdSoyad" class="text-danger"></span>
                            </div>

                            <div class="mb-3 col-md-12">
                                <label asp-for="Unvan1" class="form-label">Ünvan 1</label>
                                <input asp-for="Unvan1" class="form-control" placeholder="Ünvanı giriniz" />
                                <span asp-validation-for="Unvan1" class="text-danger"></span>
                            </div>

                            <div class="mb-3 col-md-12">
                                <label asp-for="Unvan2" class="form-label">Ünvan 2</label>
                                <input asp-for="Unvan2" class="form-control" placeholder="Alt unvanı giriniz" />
                                <span asp-validation-for="Unvan2" class="text-danger"></span>
                            </div>

                            <div class="mb-3 col-md-12 text-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="ti ti-check me-1"></i> Güncelle
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="ti ti-arrow-left me-1"></i> İptal
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
