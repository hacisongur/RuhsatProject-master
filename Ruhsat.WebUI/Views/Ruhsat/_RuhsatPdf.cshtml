@model RuhsatProject.DTOs.Ruhsat.RuhsatDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Ruhsat Belgesi</title>
    <style>
        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            font-family: 'Arial', sans-serif;
            font-size: 12px;
        }

        .wrapper {
            position: relative;
            width: 100%;
            height: 1122px;
            box-sizing: border-box;
            border: 10px solid #1d4ea4;
            padding: 40px 25px 25px 25px;
        }

        .footer {
            position: absolute;
            bottom: 10px;
            left: 25px;
            right: 25px;
            font-size: 11pt;
            font-weight: 400;
            color: #000;
            font-family: 'Arial Black', Arial, sans-serif;
            text-align: left;
        }

        .header {
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            margin-bottom: 15px;
            padding: 0 120px;
        }

        .logo {
            position: absolute;
            top: -35px;
            left: -35px;
            width: 300px;
            height: 200px;
        }

        .header-text {
            font-weight: bold;
            font-size: 14pt;
            text-align: center;
            width: 100%;
            line-height: 1.3;
            margin-top: 30px;
            margin-bottom: 60px;
        }

        .main-title {
            text-align: center;
            font-size: 20pt;
            font-weight: 680;
            margin-bottom: 40px;
        }

        .content-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

            .content-table td {
                padding: 2px 3px;
                vertical-align: top;
                line-height: 1.6;
                font-size: 16px;
            }

            .content-table tr {
                padding-bottom: 4px;
            }

        .label {
            font-weight: bold;
            width: 20%;
            white-space: nowrap;
            font-size: 16px;
        }

        .photo {
            position: absolute;
            top: 20px;
            right: 15px;
            width: 150px;
            height: 180px;
            border: 1px solid #000;
            object-fit: cover;
        }

        .signature {
            text-align: right;
            position: absolute;
            bottom: 60px;
            right: 40px;
            font-size: 11pt;
        }

        .row-three-cols {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .row-three-cols {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }

            .row-three-cols td {
                padding: 1px 2px;
                font-size: 16px;
                white-space: nowrap;
                vertical-align: top;
            }




        @@media print {
            /* PDF kenar boşlukları yazıcıdan ayarlanmalı */
        }
    </style>
</head>

<body>
    <div class="wrapper">
        <div class="header">
            <img src="@($"{Context.Request.Scheme}://{Context.Request.Host}/img/logo-2.png")" class="logo" alt="Logo" />
            <div class="header-text">
                <br /><br /><br /><br />
                T.C. <br />
                BATMAN <br />
                BELEDİYE BAŞKANLIĞI
            </div>
        </div>

        <div class="main-title">
            İŞYERİ AÇMA VE ÇALIŞMA RUHSATI
        </div>

        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <img class="photo" src="@Model.PhotoPath" alt="Fotoğraf" />
        }

        <!-- Ana bilgiler -->
        <table class="content-table">
            <tr>
                <td class="label">T.C. Kimlik No</td>
                <td>: @Model.TcKimlikNo</td>
            </tr>
            <tr>
                <td colspan="2" style="height:6px;"></td>
            </tr>
            <tr>
                <td class="label">Adı Soyadı</td>
                <td>: @Model.Adi @Model.Soyadi</td>
            </tr>
            <tr>
                <td colspan="2" style="height:6px;"></td>
            </tr>
            <tr>
                <td class="label">İşyeri Ünvanı</td>
                <td>: @Model.IsyeriUnvani</td>
            </tr>
            <tr>
                <td colspan="2" style="height:6px;"></td>
            </tr>
            <tr>
                <td class="label">Faaliyet Konusu</td>
                <td>: @Model.FaaliyetKonusu?.Name</td>
            </tr>
            <tr>
                <td colspan="2" style="height:6px;"></td>
            </tr>
            <tr>
                <td class="label">İşyerinin Adresi</td>
                <td>: @Model.Adres</td>
            </tr>
        </table>

        <!-- Ada / Pafta / Parsel -->
        <table class="row-three-cols" style="width: 100%;">
            <tr>
                <td style="white-space: nowrap; width: 45%;">
                    <span style="font-weight: bold;">İşyerinin Bulunduğu Yer Ada No :</span> @Model.Ada
                </td>
                <td style="white-space: nowrap; width: 27.5%;">
                    <span style="font-weight: bold;">Pafta :</span> @Model.Pafta
                </td>
                <td style="white-space: nowrap; width: 27.5%;">
                    <span style="font-weight: bold;">Parsel :</span> @Model.Parsel
                </td>

            </tr>
        </table>
        <table class="content-table">
            <tr>
             <td class="label">İşyeri Sınıfı </td>
<td>
    :
    @if (Model.RuhsatTuru?.Name == "Gayrisıhhi Müessese")
    {
        <text>@Model.RuhsatSinifi?.Name</text>  <!-- Örn: 1. Sınıf -->
    }
    else
    {
        <text>….sınıf</text>
    }

    &nbsp;&nbsp;

    <!-- Dinamik olarak sadece 1 defa ruhsat türünü yaz -->
    <text>(X) @Model.RuhsatTuru?.Name</text>

    &nbsp;&nbsp;
                    <!-- Sıhhi Müessese sabit gösterim -->
                    @if (Model.RuhsatTuru?.Name == "Sıhhi Müessese")
                    {
                        <text>(X) Sıhhi Müessese</text>
                    }
                    else
                    {
                        <text>( ) Sıhhi Müessese</text>
                    }
                </td>
            </tr>
        </table>

        <table style="width: 100%; table-layout: fixed; margin-top: 4px;">
            <tr>
                <td style="white-space: nowrap; text-align: left; font-size: 17px; padding: 0;">
                    <span style="font-weight: bold;">Ruhsat Tarihi :</span> @Model.VerilisTarihi.ToString("dd.MM.yyyy")
                    &nbsp;&nbsp;-&nbsp;&nbsp;
                    <span style="font-weight: bold;">Ruhsat No :</span> @Model.RuhsatNo
                </td>
            </tr>
        </table>
        <!-- İmza bloğu -->
        <div style="position: relative; width: 100%; height: 90px; margin-top: 60px;">
            <!-- Üst satır sağda -->
            <div style="position: absolute; top: 0; right: 40px; font-size: 16pt; font-weight: bold; text-align: right;">
                Mustafa Caner CULUKAR
            </div>

            <!-- Ortadaki satır tam sayfa ortasında -->
            <div style="position: absolute; top: 32px; right: 70px; font-size: 14pt; text-align: center; width: 150px;">
                Başkan a.
            </div>

            <!-- Alt satır sağda -->
            <div style="position: absolute; bottom: 0; right: 40px; font-size: 14pt; text-align: right;">
                Belediye Başkan Yardımcısı
            </div>
        </div>



        <div class="footer">
            14/07/2005 Tarihli ve 2005/9207 Sayılı Bakanlar Kurulu Kararı ile yürürlüğe konulan
            İşyeri Açma ve Çalışma Ruhsatlarına İlişkin Yönetmelik kapsamında düzenlenmiştir.
        </div>
    </div>
</body>

</html>