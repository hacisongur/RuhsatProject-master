@model RuhsaProject.DTOs.DepoDtos.DepoDto

@{
    ViewData["Title"] = "Depo Güncelle";
}

<div class="container py-4">
    <div class="card mb-4 shadow-lg">
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="Id" />

                        <!-- Form Alanları -->
                        <div class="row">
                            <div class="mb-3 col-md-12">
                                <label asp-for="Adi" class="form-label">Depo Adı</label>
                                <input asp-for="Adi" class="form-control" placeholder="Depo adını giriniz (örn: Gıda Deposu)" />
                                <span asp-validation-for="Adi" class="text-danger"></span>
                            </div>

                            <div class="mb-3 col-md-12">
                                <label asp-for="RuhsatSinifiId" class="form-label">Ruhsat Sınıfı</label>
                                <select asp-for="RuhsatSinifiId" class="form-select" asp-items="ViewBag.RuhsatSiniflari">
                                    <option value="">Ruhsat sınıfı seçiniz</option>
                                </select>
                                <span asp-validation-for="RuhsatSinifiId" class="text-danger"></span>
                            </div>

                            <div class="mb-3 col-md-12 text-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="ti ti-check me-1"></i> Güncelle
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="ti ti-arrow-left me-1"></i> İptal
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
