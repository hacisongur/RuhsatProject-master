@model RuhsaProject.DTOs.DepoDtos.DepoDto

@{
    ViewData["Title"] = "Yeni Depo";
}

<h4 class="fw-bold py-3 mb-4">Yeni Depo Ekle</h4>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">@* 
            <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div> *@

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-warning mt-3">
                    <h5>Doğrulama Hataları:</h5>
                    <ul>
                        @foreach (var state in ViewData.ModelState)
                        {
                            @foreach (var error in state.Value.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }

            <div class="mb-3">
                <label asp-for="Adi" class="form-label">Depo Adı</label>
                <input asp-for="Adi" class="form-control" required />
                <span asp-validation-for="Adi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RuhsatSinifiId" class="form-label">Ruhsat Sınıfı</label>
                <select asp-for="RuhsatSinifiId" class="form-select" asp-items="ViewBag.RuhsatSiniflari" required>
                    <option value="">-- Ruhsat Sınıfı Seçiniz --</option>
                </select>
                <span asp-validation-for="RuhsatSinifiId" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="ti ti-device-floppy me-1"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-label-secondary">
                    <i class="ti ti-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
