@model List<RuhsaProject.DTOs.DepoDtos.DepoDto>

@{
    ViewData["Title"] = "Depo Listesi";
}

<!-- DataTable with Buttons -->
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-end mb-3">
            <a asp-action="Create" class="btn btn-label-primary">
                <i class="ti ti-plus me-1"></i> Yeni Depo
            </a>
        </div>
        <div class="table-responsive">
            <table class="table table-sm datatables-basic w-100">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Depo Adı</th>
                        <th>Ruhsat Sınıfı</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Adi</td>
                            <td>@item.RuhsatSinifi?.Name</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-label-primary">
                                    <i class="ti ti-edit"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-icon btn-label-danger">
                                    <i class="ti ti-trash-filled"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.datatables-basic').DataTable({
                scrollX: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.5/i18n/tr.json'
                },
                dom: 't<"row mx-2 mt-2"<"col-md-6"l><"col-md-6 d-flex justify-content-end"p>>',
                 order: [[0, 'desc']] // En son eklenen en üstte
            });
        });
    </script>
}

@section Styles {
    <style>
        table.datatables-basic td,
        table.datatables-basic th {
            font-size: 12px !important;
            padding: 0.3rem 0.5rem !important;
        }
        /* ✅ Hover efekti: Açık Mor */
        table.datatables-basic tbody tr:hover {
            background-color: #E0E4F5 !important;
            cursor: pointer;
        }
    </style>
}
