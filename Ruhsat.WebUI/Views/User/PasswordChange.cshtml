@model RuhsaProject.DTOs.UserDtos.UserPasswordChangeDto

@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="container py-4">
    <div class="card shadow-lg">
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-6">
                    <h4 class="fw-bold mb-4"><i class="ti ti-lock me-2"></i> Şifre Güncelleme Formu</h4>

                    <form asp-action="PasswordChange" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="CurrentPassword" type="password" class="form-control"
                                    id="currentPasswordInput" />
                                <span class="input-group-text cursor-pointer"
                                    onclick="togglePassword('currentPasswordInput', 'currentPasswordIcon')">
                                    <i class="ti ti-eye" id="currentPasswordIcon"></i>
                                </span>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="NewPassword" type="password" class="form-control"
                                    id="newPasswordInput" />
                                <span class="input-group-text cursor-pointer"
                                    onclick="togglePassword('newPasswordInput', 'newPasswordIcon')">
                                    <i class="ti ti-eye" id="newPasswordIcon"></i>
                                </span>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RepeatPassword" class="form-label"></label>
                            <div class="input-group input-group-merge">
                                <input asp-for="RepeatPassword" type="password" class="form-control"
                                    id="repeatPasswordInput" />
                                <span class="input-group-text cursor-pointer"
                                    onclick="togglePassword('repeatPasswordInput', 'repeatPasswordIcon')">
                                    <i class="ti ti-eye" id="repeatPasswordIcon"></i>
                                </span>
                            </div>
                            <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">
                                <i class="ti ti-check me-1"></i> Şifreyi Güncelle
                            </button>
                            <a asp-action="Index" asp-controller="User" class="btn btn-outline-secondary">
                                <i class="ti ti-arrow-left me-1"></i> Geri Dön
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function togglePassword(inputId, iconId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(iconId);

            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("ti-eye");
                icon.classList.add("ti-eye-off");
            } else {
                input.type = "password";
                icon.classList.remove("ti-eye-off");
                icon.classList.add("ti-eye");
            }
        }
    </script>
}
