@model RuhsaProject.DTOs.RoleDtos.UserRoleAssignDto

<form asp-action="Assign" asp-controller="User" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="modal-header">
        <h5 class="modal-title">Rol Ata – @Model.UserName</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
    </div>

    <div class="modal-body">
        <div class="list-group">
            @for (int i = 0; i < Model.RoleAssignDtos.Count; i++)
            {
                <input type="hidden" asp-for="RoleAssignDtos[@i].RoleId" />
                <input type="hidden" asp-for="RoleAssignDtos[@i].RoleName" />

                <label class="list-group-item d-flex justify-content-between align-items-center">
                    <span>@Model.RoleAssignDtos[i].RoleName</span>
                    <input type="checkbox" asp-for="RoleAssignDtos[@i].HasRole" class="form-check-input" />
                </label>
            }
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">İptal</button>
    </div>
</form>
