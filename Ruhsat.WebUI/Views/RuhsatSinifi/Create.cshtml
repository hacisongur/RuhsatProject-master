@model RuhsaProject.DTOs.RuhsatSinifiDtos.RuhsatSinifiDto

@{
    ViewData["Title"] = "Yeni Ruhsat Sınıfı";
}

<h4 class="fw-bold py-3 mb-4">Yeni Ruhsat Sınıfı Ekle</h4>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-warning mt-3">
                    <h5>Doğrulama Hataları:</h5>
                    <ul>
                        @foreach (var state in ViewData.ModelState)
                        {
                            @foreach (var error in state.Value.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Ruhsat Sınıfı Adı</label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RuhsatTuruId" class="form-label">Ruhsat Türü</label>
                <select asp-for="RuhsatTuruId" class="form-select" asp-items="ViewBag.RuhsatTurleri" required>
                    <option value="">-- Ruhsat Türü Seçiniz --</option>
                </select>
                <span asp-validation-for="RuhsatTuruId" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="ti ti-device-floppy me-1"></i> Kaydet
                </button>
                <a asp-action="Index" class="btn btn-label-secondary">
                    <i class="ti ti-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}